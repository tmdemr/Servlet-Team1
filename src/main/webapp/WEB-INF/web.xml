<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Relative URL for the WebMail System</description>
        <param-name>HomeDirectory</param-name>
        <param-value>/maven_webmail/</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdminHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.UserAdminHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteMailHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.WriteMailHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadMailHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.ReadMailHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendedMailHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.SendedMailHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.UserHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHandler</servlet-name>
        <url-pattern>/userHandle.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendedMailHandler</servlet-name>
        <url-pattern>/sendedMail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdminHandler</servlet-name>
        <url-pattern>/UserAdmin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteMailHandler</servlet-name>
        <url-pattern>/WriteMail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadMailHandler</servlet-name>
        <url-pattern>/ReadMail.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <res-ref-name>jdbc/JamesWebmail</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
